
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role { USER MODERATOR ADMIN }
enum Status { DRAFT REVIEW PUBLISHED REJECTED }
enum ContentType { IMAGE VIDEO AUDIO TEXT }
enum Decision { PENDING APPROVE REJECT }
enum InteractionType { LIKE COMMENT REPORT VIEW }

model User {
  id        String    @id @default(cuid())
  email     String    @unique
  name      String?
  image     String?
  role      Role      @default(USER)
  createdAt DateTime  @default(now())
  contents  Content[]
}

model Content {
  id          String      @id @default(cuid())
  ownerId     String
  owner       User        @relation(fields: [ownerId], references: [id])
  title       String
  slug        String      @unique
  type        ContentType
  status      Status      @default(REVIEW)
  fileKey     String
  mime        String
  size        Int
  width       Int?
  height      Int?
  hash        String?     @unique
  tags        String[]
  meta        Json?
  moderation  Moderation?
  publishedAt DateTime?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}

model Moderation {
  id         String   @id @default(cuid())
  contentId  String   @unique
  content    Content  @relation(fields: [contentId], references: [id])
  autoScore  Float?
  autoFlags  String[]
  manualNote String?
  decision   Decision @default(PENDING)
  reviewedBy String?
  reviewedAt DateTime?
}

model Interaction {
  id        String           @id @default(cuid())
  userId    String?
  contentId String
  type      InteractionType
  createdAt DateTime         @default(now())
}
